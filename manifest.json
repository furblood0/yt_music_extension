{
  "manifest_version": 3,
  "name": "YouTube Music Playlist Organizer",
  "version": "1.1.0",
  "description": "YouTube Music oynatma listelerindeki şarkıları sanatçılarına göre organize eder ve JSON olarak dışa aktarır",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://music.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Music Playlist Organizer"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png",
    "48": "icons/favicon-48x48.png",
    "128": "icons/android-chrome-192x192.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["https://music.youtube.com/*"]
    }
  ]
} 